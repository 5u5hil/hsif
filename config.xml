<widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.infini.timesnetwor0"
        versionCode = "10"
        version     = "0.0.1" >

    <preference name="phonegap-version" value="cli-6.0.0" />
 
    <preference name="fullscreen" value="true" /> 
    <!-- versionCode is optional and Android only -->
    <platform name="winphone" />
    <author>Infini Systems Pvt Ltd</author>
    <preference name="windows-identity-name" value="InfiniSystemsPvtLtd.HSIF2016India" />
    <!-- Windows 8.1: -->
    <!-- Windows 10 (default): -->
    <!--    <preference name="windows-appx-target" value="uap" />
     Windows 8.1: 
    <preference name="windows-appx-target" value="8.1-win" />-->
